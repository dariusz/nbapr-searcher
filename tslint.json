{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "semicolon": {
            "options": ["never"]
        },
        "no-bitwise": false,
        "quotemark": {
            "options": ["single", "avoid-escape"]
        },
        "object-literal-sort-keys": false,
        "jsdoc-format": false
    },
    "rules": {
        "semicolon": {
            "options": ["never"]
        },
        "no-bitwise": false,
        "quotemark": {
            "options": ["single", "avoid-escape"]
        },
        "max-classes-per-file": false,
        "no-console": false,
        "no-var-requires": false, // todo: turn this back to true
        "trailing-comma": false
    },
    "rulesDirectory": []
}